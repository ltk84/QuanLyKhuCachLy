                FontSize="22"
                FontWeight="Bold"
                Foreground="#FF363636">
                DANH SÁCH NHÂN VIÊN
            </TextBlock>
            <Button
                Grid.Column="1"
                Background="#FF1D9583"
                Command="{Binding ToAddCommand}"
                Content="Thêm nhân viên"
                Height="35"
                Width="140"
                FontSize="16"
                Style="{StaticResource AddObjectButton}" />

        </Grid>

        <TextBlock
            Margin="0,10,0,0"
            FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
            FontSize="16"
            Foreground="#FF434A54">
            Nhập bất kì để tìm kiếm
        </TextBlock>
        <TextBox
            Width="350"
            Height="34"
            Margin="0,4,0,0"
            HorizontalAlignment="Left"
            materialDesign:HintAssist.Hint="Nhập bất kì để tìm kiếm"
            MaxLength="30"
            Style="{StaticResource TextInputField}" />

