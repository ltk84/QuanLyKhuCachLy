<UserControl
    x:Class="QuanLyKhuCachLy.View.InitialSettingSecondPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="740"
    d:DesignWidth="1225"
    mc:Ignorable="d">
    <StackPanel Margin="0,0,0,0">
        <TextBlock
            Margin="0,32,0,0"
            HorizontalAlignment="Center"
            FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
            FontSize="32"
            FontWeight="Bold">
            Cập nhật thông tin người quản lý
        </TextBlock>
        <TextBlock
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
            FontSize="18">
            Vui lòng điền thông tin người quản lý khu cách ly.
        </TextBlock>
        <Grid Margin="80,15,80,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="A" />
                    <ColumnDefinition SharedSizeGroup="A" />
                    <ColumnDefinition SharedSizeGroup="A" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#FF434A54">
                        Thông tin cá nhân
                    </TextBlock>
                    <Separator Margin="0,5,24,2">
                        <Separator.RenderTransform>
                            <ScaleTransform ScaleY="2" />
                        </Separator.RenderTransform>
                    </Separator>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Margin="0,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="A" />
                    <ColumnDefinition SharedSizeGroup="A" />
                    <ColumnDefinition SharedSizeGroup="A" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,24,0">
                    <TextBlock
                        Margin="5,0,0,5"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="16"
                        Foreground="#FF434A54">
                        Họ và tên
                    </TextBlock>
                    <TextBox
                        Margin="0"
                        Padding="16,16,12,14"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Background="Transparent"
                        materialDesign:HintAssist.Foreground="#FF434a54"
                        materialDesign:HintAssist.Hint="Nhập họ và tên"
                        materialDesign:HintAssist.IsFloating="False"
                        materialDesign:TextFieldAssist.HasOutlinedTextField="False"
                        materialDesign:TextFieldAssist.LeadingIcon="Person"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10,10,10,10"
                        materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                        Background="#FFEBEBEB"
                        BorderBrush="#00000000"
                        CaretBrush="#FF434A54"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="14"
                        Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,24,0">
                    <TextBlock
                        Margin="5,0,0,5"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="16"
                        Foreground="#FF434A54">
                        Ngày sinh
                    </TextBlock>
                    <TextBox
                        Margin="0"
                        Padding="16,16,12,14"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Background="Transparent"
                        materialDesign:HintAssist.Foreground="#FF434a54"
                        materialDesign:HintAssist.Hint="Nhập họ và tên"
                        materialDesign:HintAssist.IsFloating="False"
                        materialDesign:TextFieldAssist.HasOutlinedTextField="False"
                        materialDesign:TextFieldAssist.LeadingIcon="Person"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10,10,10,10"
                        materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                        Background="#FFEBEBEB"
                        BorderBrush="#00000000"
                        CaretBrush="#FF434A54"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="14"
                        Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0"
                    VerticalAlignment="Bottom">
                    <TextBlock
                        Margin="5,0,0,5"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="16"
                        Foreground="#FF434A54">
                        Giới tính
                    </TextBlock>
                    <ComboBox
                        materialDesign:HintAssist.Hint="Nhấp vào để chọn"
                        materialDesign:TextFieldAssist.UnderlineBrush="#ff434a54"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBoxItem>
                            Nam
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Nữ
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,25,24,0">
                    <TextBlock
                        Margin="5,0,0,5"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="16"
                        Foreground="#FF434A54">
                        Căn cước công dân
                    </TextBlock>
                    <TextBox
                        Margin="0"
                        Padding="16,16,12,14"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Background="Transparent"
                        materialDesign:HintAssist.Foreground="#FF434a54"
                        materialDesign:HintAssist.Hint="Nhập số căn cước công dân"
                        materialDesign:HintAssist.IsFloating="False"
                        materialDesign:TextFieldAssist.HasOutlinedTextField="False"
                        materialDesign:TextFieldAssist.LeadingIcon="Person"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10,10,10,10"
                        materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                        Background="#FFEBEBEB"
                        BorderBrush="#00000000"
                        CaretBrush="#FF434A54"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="14"
                        Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="0,25,0,0"
                    VerticalAlignment="Bottom">
                    <TextBlock
                        Margin="5,0,0,5"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="16"
                        Foreground="#FF434A54">
                        Quốc tịch
                    </TextBlock>
                    <ComboBox
                        materialDesign:HintAssist.Hint="Nhấp vào để chọn"
                        materialDesign:TextFieldAssist.UnderlineBrush="#ff434a54"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,25,24,0">
                    <TextBlock
                        Margin="5,0,0,5"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="16"
                        Foreground="#FF434A54">
                        Mã bảo hiểm y tế
                    </TextBlock>
                    <TextBox
                        Margin="0"
                        Padding="16,16,12,14"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Background="Transparent"
                        materialDesign:HintAssist.Foreground="#FF434a54"
                        materialDesign:HintAssist.Hint="Nhập mã bảo hiểm y tế"
                        materialDesign:HintAssist.IsFloating="False"
                        materialDesign:TextFieldAssist.HasOutlinedTextField="False"
                        materialDesign:TextFieldAssist.LeadingIcon="Person"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10,10,10,10"
                        materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                        Background="#FFEBEBEB"
                        BorderBrush="#00000000"
                        CaretBrush="#FF434A54"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="14"
                        Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,25,24,0">
                    <TextBlock
                        Margin="5,0,0,5"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="16"
                        Foreground="#FF434A54">
                        Số điện thoại
                    </TextBlock>
                    <TextBox
                        Margin="0"
                        Padding="16,16,12,14"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Background="Transparent"
                        materialDesign:HintAssist.Foreground="#FF434a54"
                        materialDesign:HintAssist.Hint="Nhập số điện thoại"
                        materialDesign:HintAssist.IsFloating="False"
                        materialDesign:TextFieldAssist.HasOutlinedTextField="False"
                        materialDesign:TextFieldAssist.LeadingIcon="Person"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10,10,10,10"
                        materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                        Background="#FFEBEBEB"
                        BorderBrush="#00000000"
                        CaretBrush="#FF434A54"
                        FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                        FontSize="14"
                        Foreground="Black"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
