<UserControl
    x:Class="QuanLyKhuCachLy.CustomUserControl.AddQuarantinedPersonFirstPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vr="clr-namespace:QuanLyKhuCachLy.ValidationRules"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="0,0,0,0">
        <TextBlock
            Margin="0,32,0,0"
            HorizontalAlignment="Center"
            FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
            FontSize="24"
            FontWeight="Bold">
            Thêm người cách ly
        </TextBlock>
        <TextBlock
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
            FontSize="16">
            Vui lòng điền thông tin người cách ly
        </TextBlock>
        <Grid Grid.Row="0" Margin="30,0,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="A" />
                <ColumnDefinition SharedSizeGroup="A" />
                <ColumnDefinition SharedSizeGroup="A" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock
                    Margin="0,0,0,0"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#FF434A54">
                    Thông tin cá nhân
                </TextBlock>
                <Separator Margin="0,5,0,2">
                    <Separator.RenderTransform>
                        <ScaleTransform ScaleY="1" />
                    </Separator.RenderTransform>
                </Separator>
            </StackPanel>
            <StackPanel Grid.Row="1" Margin="0,10,24,0">
                <TextBlock
                    Margin="5,0,0,5"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    Foreground="#FF434A54">
                    Họ và tên
                </TextBlock>
                <TextBox
                    Height="40"
                    Margin="0,0,-245,0"
                    Padding="10,8,8,10"
                    materialDesign:HintAssist.Hint="Nhập họ và tên"
                    MaxLength="30"
                    Style="{StaticResource TextInputField}" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,25,24,0"
                VerticalAlignment="Bottom" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,0,0,0"
                VerticalAlignment="Bottom">
                <TextBlock
                    Margin="5,0,0,5"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    Foreground="#FF434A54">
                    Giới tính
                </TextBlock>
                <TextBox
                    Height="40"
                    Margin="0,0,0,0"
                    Padding="10,8,8,10"
                    materialDesign:HintAssist.Hint="Nhập giới tính"
                    MaxLength="30"
                    Style="{StaticResource TextInputField}" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,15,24,0">
                <TextBlock
                    Margin="5,0,0,5"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    Foreground="#FF434A54">
                    Ngày sinh
                </TextBlock>
                <TextBox
                    Height="40"
                    Padding="10,8,8,10"
                    materialDesign:HintAssist.Hint="Nhập ngày sinh"
                    MaxLength="20"
                    Style="{StaticResource TextInputField}" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,15,24,0">
                <TextBlock
                    Margin="5,0,0,5"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    Foreground="#FF434A54">
                    Căn cước công dân
                </TextBlock>
                <TextBox
                    Height="40"
                    Padding="10,8,8,10"
                    materialDesign:HintAssist.Hint="Nhập số địa chỉ"
                    MaxLength="20"
                    Style="{StaticResource TextInputField}" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="2"
                Margin="0,15,0,0">
                <TextBlock
                    Margin="5,0,0,5"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    Foreground="#FF434A54">
                    Quốc tịch
                </TextBlock>
                <ComboBox
                    Height="40"
                    Margin="0,0,0,0"
                    Padding="10,8,8,10"
                    ItemsSource="{Binding NationalityList}"
                    Style="{StaticResource ComboBoxField}" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,15,24,0">
                <TextBlock
                    Margin="5,0,0,5"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    Foreground="#FF434A54">
                    Số điện thoại
                </TextBlock>
                <TextBox
                    Height="40"
                    Padding="10,8,8,10"
                    materialDesign:HintAssist.Hint="Nhập số điện thoại"
                    MaxLength="20"
                    Style="{StaticResource TextInputField}" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,15,24,0">
                <TextBlock
                    Margin="5,0,0,5"
                    FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans"
                    FontSize="16"
                    Foreground="#FF434A54">
                    Mã bảo hiểm y tế
                </TextBlock>
                <TextBox
                    Height="40"
                    Padding="10,8,8,10"
                    materialDesign:HintAssist.Hint="Nhập mã bảo hiểm y tế"
                    MaxLength="20"
                    Style="{StaticResource TextInputField}" />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
