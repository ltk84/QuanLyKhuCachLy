<Window x:Class="QuanLyKhuCachLy.AuthenticationScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyKhuCachLy"
        mc:Ignorable="d"
        Title="Window1" 
        Height="1024" Width="1440" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" 
        ResizeMode="NoResize">
    <StackPanel Background="#FF3D4466">
        <Image Source="/Resources/logo/logo.png"/>
        <Border CornerRadius="15" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Background="White" 
                Margin="508,0,515.6,0" 
                Width="410" 
                Height="399">
            <StackPanel Margin="0,0,0,0" 
                        HorizontalAlignment="Center" Width="402">
                <Image Source="/Resources/icons/auth.png" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Height="40" 
                       Width="40" 
                       RenderTransformOrigin="0.5,0.5" 
                       Margin="0,45,0,0"/>
                <TextBlock FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#FF434A54" 
                           Margin="0,8" 
                           FontSize="24" 
                           FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans">
                    <Run Text="Xác thực"/>
                </TextBlock>
                <TextBox Style="{StaticResource MaterialDesignFilledTextBox}" 
                         VerticalAlignment="Top" 
                         TextWrapping="Wrap" 
                         MaxWidth="400" 
                         materialDesign:HintAssist.Hint="Tên tài khoản" 
                         materialDesign:TextFieldAssist.UnderlineBrush="#FF3D4466"
                         materialDesign:TextFieldAssist.LeadingIcon="Person"
                         materialDesign:HintAssist.Foreground="#FF434a54"
                         materialDesign:TextFieldAssist.TextFieldCornerRadius="10,10,0,0"
                         CaretBrush="#FF434A54"
                         Margin="65,8,65,0" 
                         Padding="16,8,12,8" 
                         FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans" 
                         FontSize="14" Foreground="#FF434A54"/>
                <PasswordBox Style="{StaticResource MaterialDesignFilledPasswordBox}" 
                             materialDesign:HintAssist.Hint="Mật khẩu"
                             materialDesign:TextFieldAssist.UnderlineBrush="#FF3D4466"
                             materialDesign:TextFieldAssist.LeadingIcon="Password"
                             materialDesign:HintAssist.Foreground="#FF434a54"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="10,10,0,0"
                             CaretBrush="#FF434A54"
                             Margin="65,20,65,0" 
                             VerticalAlignment="Top" 
                             Padding="16,8,16,8" 
                             FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans" 
                             FontSize="14" Foreground="#FF434A54"/>
                <Grid Margin="65,32,64.6,0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" Width="272">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Background="#FF434A54" 
                                BorderBrush="{x:Null}" 
                                FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans" 
                                Margin="0" 
                                FontSize="12"
                                FontWeight="Bold" Width="124">
                            <TextBlock Text="Thoát" />
                        </Button>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Background="#FF1D9583" 
                                BorderBrush="{x:Null}" 
                                FontFamily="/QuanLyKhuCachLy;component/Resources/fonts/#Noto Sans" 
                                FontWeight="Bold"
                                FontSize="12"
                                Margin="24,0,0,0" VerticalAlignment="Center" Width="124" Height="32">
                            <TextBlock Text="Xác nhận" />
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
